!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title RubyCodingTest

    = csrf_meta_tags

    %link{crossorigin: "anonymous", href: "https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css", integrity: "sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO", rel: "stylesheet"}/

    -#= stylesheet_link_tag    'application', media: 'all'
    -#= javascript_include_tag 'application'

  %body.container
    %nav.navbar.navbar-dark.bg-dark.navbar-expand.mb-4
      .navbar-nav
        = link_to 'Admin dashboard', admin_dashboard_path, class: 'nav-link'
        = link_to 'Sign-in', root_path, class: 'nav-link' unless admin_authenticated?
        = link_to 'Sign-out', admin_sign_out_path, class: 'nav-link' if admin_authenticated?

    = render "layouts/flash"
    = yield
